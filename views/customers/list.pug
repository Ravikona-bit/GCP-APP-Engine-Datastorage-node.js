extends ../base.pug

block content
  h3 Customer Details

  table.table.table-striped#dashboardTable(style="width:100%")
    tr
      th Customer Id
      th Customer Name
      th First Name
      th Last Name
      th Customer Type
      th Created Date
      th Last Modified Date
      th City
      th Country
      th SSN
    each customer, index in customers
      tr.tabledata(style='color:red')
        td= customer.id
        td= customer.name
        td= customer.firstName
        td= customer.lastName
        td= customer.customerType
        td= customer.createdDate
        td= customer.lastModifiedDate
        td= customer.city
        td= customer.country
        td= customer.SSN

  if !customers.length
    p No customers found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
